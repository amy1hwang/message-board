<div class="detail-box">
  <p>question by <span>{{question.author}}</span></p>
  <h4>additional note:</h4>
  <p>{{question.addition}}</p>
</div>

<div class="answer-box">
  <h3>Answers to the questions</h3>
  <ul>
    {{#each question.answers as |answer|}}
      {{answer-tile answer=answer}}
    {{/each}}
  </ul>
</div>

<button {{action 'delete' question}}>Delete</button>
